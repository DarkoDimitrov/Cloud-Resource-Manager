# Application Settings
APP_NAME="Cloud Resource Manager"
APP_VERSION="0.1.0"
DEBUG=False

# Database
DATABASE_URL=sqlite:///./cloud_manager.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost:5432/cloudmanager

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=300

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ENCRYPTION_KEY=your-encryption-key-change-in-production-32-chars-minimum

# API Configuration
API_V1_PREFIX=/api
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# AI/ML Configuration
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ENABLE_NL_QUERY=true
ENABLE_ANOMALY_DETECTION=true
ENABLE_ML_RECOMMENDATIONS=true
ENABLE_COST_FORECASTING=true

# ML Model Settings
ML_MODEL_RETRAIN_DAYS=7
ANOMALY_DETECTION_SENSITIVITY=0.1
MIN_TRAINING_DAYS=30

# Background Tasks
METRIC_COLLECTION_INTERVAL=300
COST_UPDATE_INTERVAL=86400
RECOMMENDATION_INTERVAL=3600

# Performance
CACHE_ENABLED=true
API_TIMEOUT=30

# Cloud Provider Credentials (Optional - Can be configured via API)
# OpenStack
OS_AUTH_URL=
OS_USERNAME=
OS_PASSWORD=
OS_PROJECT_NAME=
OS_USER_DOMAIN_NAME=Default
OS_PROJECT_DOMAIN_NAME=Default

# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Azure
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=
